// Function to calculate monthly mortgage payment
function mortgageCal() {
    // Get the values from the input fields and convert them to numbers
    let principal = parseFloat(document.querySelector(".input-style-2 input").value.replace(/,/g, ''));
    let loanTerm = parseFloat(document.querySelector(".mortage-team-input-style-1 input").value);
    let annualInterest = parseFloat(document.querySelector(".inner-mortage-team-input-style input").value);
    
    // Convert annual interest rate to a monthly interest rate
    let monthlyInterest = annualInterest / 12 / 100;
    
    // Convert loan term in years to the number of monthly payments
    let numberOfPayments = loanTerm * 12;
    
    // Calculate the monthly payment using the formula for an annuity
    let monthlyPayment = (principal * monthlyInterest) / (1 - Math.pow((1 + monthlyInterest), -numberOfPayments));
    
    // Round the result to 2 decimal places for better readability
    monthlyPayment = monthlyPayment.toFixed(2);
    
    // Calculate the total amount paid over the term of the mortgage
    let totalPayment = (monthlyPayment * numberOfPayments).toFixed(2);
    
    // Display the results in the corresponding elements in the HTML
    document.querySelector('.result h2').innerText = `$${monthlyPayment}`;
    document.querySelector('.yearly-result p').innerText = `$${totalPayment}`;
    
    // Log the monthly interest rate to the console (for debugging purposes)
    console.log(monthlyInterest);
}

// Add an event listener to the button to trigger the calculation when clicked
document.querySelector('button').addEventListener('click', mortgageCal);
