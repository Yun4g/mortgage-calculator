document.addEventListener("DOMContentLoaded", () => {
    let validInput = document.querySelector(".valid-input");
    let goBack = document.querySelector("#goBack");
  
    goBack.addEventListener("click", () => {
      validInput.style.display = "none";
    });
  });
  
  function mortgageCal() {
    let principal = parseFloat(document.querySelector(".input-style-2 input").value.replace(/,/g, ""));
    let loanTerm = parseFloat(document.querySelector(".mortage-team-input-style-1 input").value);
    let annualInterest = parseFloat(document.querySelector(".inner-mortage-team-input-style-1 input").value);
    let mortgageType = document.querySelector('input[name="Mortgage"]:checked').value;
    let monthlyMortgagePayment;
    let validInput = document.querySelector(".valid-input");
    let monthlyRepayment = document.querySelector(".result h2");
    let totalRepayment = document.querySelector(".yearly-result p");
    let monthlyInterest = annualInterest / 12 / 100;
    let totalPayments = loanTerm * 12;
  
    if (isNaN(principal) || isNaN(loanTerm) || isNaN(annualInterest)) {
      validInput.style.display = "flex";
      return; // Exit the function early if inputs are invalid
    } else {
      validInput.style.display = "none";
    }
  
    if (mortgageType === "Repayment") {
      // Calculate the monthly mortgage payment for a repayment mortgage
      monthlyMortgagePayment = (principal * monthlyInterest) / (1 - Math.pow(1 + monthlyInterest, -totalPayments));
    } else if (mortgageType === "Interest") {
      // Calculate the monthly payment for an interest-only mortgage
      monthlyMortgagePayment = principal * monthlyInterest;
    }
  
    monthlyMortgagePayment = monthlyMortgagePayment.toFixed(2); // Round to two decimal places
    let totalAmountPaid = (monthlyMortgagePayment * totalPayments).toFixed(2);
  
    monthlyRepayment.textContent = "$" + monthlyMortgagePayment;
    totalRepayment.textContent = "$" + totalAmountPaid;
  
    console.log("Monthly Mortgage Payment:", monthlyMortgagePayment);
    console.log("Total Amount Paid:", totalAmountPaid);
  }
  